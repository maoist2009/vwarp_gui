<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="12dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Vwarp 控制面板"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="8dp"/>

    <!-- 运行模式选择 -->
    <RadioGroup
        android:id="@+id/rg_mode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <RadioButton
            android:id="@+id/rb_simple"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="简单"
            android:checked="true"/>

        <RadioButton
            android:id="@+id/rb_cmdline"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="命令行"/>

        <RadioButton
            android:id="@+id/rb_config"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="配置文件"/>
    </RadioGroup>

    <!-- 简单模式面板 -->
    <LinearLayout
        android:id="@+id/panel_simple"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:boxStrokeWidth="1dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_bind"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="绑定地址"
                android:text="127.0.0.1:1077"
                android:textSize="14sp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:boxStrokeWidth="1dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_endpoint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="端点地址"
                android:text="162.159.198.2"
                android:textSize="14sp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:boxStrokeWidth="1dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_proxy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="前置代理 (可选)"
                android:textSize="14sp"/>
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>

    <!-- 命令行模式面板 -->
    <LinearLayout
        android:id="@+id/panel_cmdline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:boxStrokeWidth="1dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_cmdline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="命令行参数"
                android:text="--masque --bind 127.0.0.1:1077 -e 162.159.198.2"
                android:textSize="13sp"
                android:minLines="2"/>
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>

    <!-- 配置文件模式面板 -->
    <LinearLayout
        android:id="@+id/panel_config"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:visibility="gone">

        <Spinner
            android:id="@+id/spinner_config"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/btn_edit_config"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="编辑"
            android:textSize="12sp"
            style="@style/Widget.MaterialComponents.Button.TextButton"/>

        <Button
            android:id="@+id/btn_new_config"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="新建"
            android:textSize="12sp"
            style="@style/Widget.MaterialComponents.Button.TextButton"/>
    </LinearLayout>

    <!-- 实例选择 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="实例: "
            android:textSize="14sp"/>

        <Spinner
            android:id="@+id/spinner_instance"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"/>

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_instance"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:hint="新实例名"
            android:textSize="14sp"
            android:background="@android:drawable/editbox_background"/>

        <Button
            android:id="@+id/btn_add_instance"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="+"
            android:textSize="16sp"
            android:minWidth="48dp"
            style="@style/Widget.MaterialComponents.Button.TextButton"/>
    </LinearLayout>

    <!-- 控制按钮 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <Button
            android:id="@+id/btn_start"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="启动"
            android:layout_marginEnd="4dp"/>

        <Button
            android:id="@+id/btn_stop"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="停止"
            android:layout_marginHorizontal="4dp"/>

        <Button
            android:id="@+id/btn_stop_all"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="全停"
            android:layout_marginStart="4dp"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>
    </LinearLayout>

    <!-- 状态 -->
    <TextView
        android:id="@+id/tv_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="状态: 未运行"
        android:textSize="14sp"
        android:background="#E0E0E0"
        android:padding="8dp"
        android:layout_marginBottom="4dp"/>

    <!-- 运行中实例 -->
    <TextView
        android:id="@+id/tv_running"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="运行中: 无"
        android:textSize="12sp"
        android:textColor="#666666"
        android:layout_marginBottom="4dp"/>

    <!-- 日志标题行 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="日志"
            android:textStyle="bold"
            android:textSize="14sp"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/btn_clear_log"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="清空"
            android:textSize="12sp"
            android:paddingHorizontal="8dp"
            style="@style/Widget.MaterialComponents.Button.TextButton"/>

        <Button
            android:id="@+id/btn_save_log"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="保存"
            android:textSize="12sp"
            android:paddingHorizontal="8dp"
            style="@style/Widget.MaterialComponents.Button.TextButton"/>
    </LinearLayout>

    <!-- 日志区域 -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#1A1A1A"
        android:layout_marginTop="4dp">

        <TextView
            android:id="@+id/tv_log"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="11sp"
            android:typeface="monospace"
            android:textColor="#00FF00"
            android:padding="8dp"
            android:textIsSelectable="true"/>
    </ScrollView>

</LinearLayout>